<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/updateFournisseur/<%= fournisseur.id_fournisseur %>" method="POST">
          <input
            type="text"
            name="id_fournisseur"
            value="<%= fournisseur.id_fournisseur%>"
            placeholder="<%= fournisseur.id_fournisseur%>"
            class="form-control mb-3"
            disabled
          />
        <input
            type="text"
            name="nom_fournisseur"
            value="<%= fournisseur.nom_fournisseur%>"
            placeholder="Nom du fournisseur"
            class="form-control mb-3"
          />

          <button type="submit" class="btn btn-primary">Save Fournisseur</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
